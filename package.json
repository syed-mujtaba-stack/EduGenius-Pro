{
  "name": "edugenius-pro",
  "version": "0.1.0",
  "description": "AI-powered education platform for personalized learning",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "start": "npm run start --workspace=client",
    "lint": "npm run lint --workspace=client",
    "test": "npm run test --workspace=client",
    "type-check": "npm run type-check --workspace=client",
    "clean": "npm run clean --workspace=client && npm run clean --workspace=server",
    "install:all": "npm install",
    "dev:server": "npm run dev --workspace=server",
    "build:server": "npm run build --workspace=server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/edugenius-pro.git"
  },
  "keywords": [
    "education",
    "ai",
    "learning",
    "nextjs",
    "react",
    "typescript"
  ],
  "author": "EduGenius Pro Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/edugenius-pro/issues"
  },
  "homepage": "https://github.com/yourusername/edugenius-pro#readme",
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
